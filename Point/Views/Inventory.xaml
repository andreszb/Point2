<Page x:Class="Point.Views.Inventory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Behaviors="using:Template10.Behaviors"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Point.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:Point.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveVisualStateGroup">
                <VisualState x:Name="VisualStateNarrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for narrow view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Narrow Visual State"> /-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateNormal">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for normal view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Normal Visual State" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="VisualStateWide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!--  TODO: change properties for wide view  -->
                        <!--<Setter Target="stateTextBox.Text" Value="Wide Visual State" />-->
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <controls:PageHeader x:Name="pageHeader"
                             EllipsisVisibility="Collapsed"
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.AlignTopWithPanel="True"
                             Text="Inventario">

            <controls:PageHeader.PrimaryCommands>
                <AppBarButton Name="AddButton"
                              Click="AddButton_Click"
                              Icon="Add"
                              Label="Agregar" />
            </controls:PageHeader.PrimaryCommands>

        </controls:PageHeader>

        <SplitView Name="inventorySplitView"
                   Grid.Row="1"
                   DisplayMode="Inline"
                   IsPaneOpen="True"
                   PaneBackground="Beige"
                   PanePlacement="Right">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer Name="newScrollViewer" VerticalScrollBarVisibility="Auto">
                        <Grid Name="newItemGrid"
                              Grid.Row="0"
                              MinHeight="400"
                              Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" FontSize="36">Nuevo articulo</TextBlock>

                            <AutoSuggestBox Name="BrandBox"
                                            Grid.Row="1"
                                            VerticalAlignment="Center"
                                            PlaceholderText="Marca" />
                            <AutoSuggestBox Name="ModelBox"
                                            Grid.Row="2"
                                            VerticalAlignment="Center"
                                            PlaceholderText="Modelo" />
                            <AutoSuggestBox Name="ColorBox"
                                            Grid.Row="3"
                                            VerticalAlignment="Center"
                                            PlaceholderText="Color" />
                            <AutoSuggestBox Name="SizeBox"
                                            Grid.Row="4"
                                            VerticalAlignment="Center"
                                            PlaceholderText="Tamano" />
                            <TextBox Name="NumBox"
                                     Grid.Row="5"
                                     VerticalAlignment="Center"
                                     PlaceholderText="Numero" />
                            <TextBox Name="CostBox"
                                     Grid.Row="6"
                                     VerticalAlignment="Center"
                                     PlaceholderText="Costo" />
                            <TextBox Name="PriceBox"
                                     Grid.Row="7"
                                     VerticalAlignment="Center"
                                     PlaceholderText="Precio" />
                            <ComboBox Name="CategoryBox"
                                      Grid.Row="8"
                                      Width="{Binding ActualWidth,
                                                      ElementName=newItemGrid}"
                                      VerticalAlignment="Center"
                                      PlaceholderText="Categoria">
                                <x:String>Item 1</x:String>
                            </ComboBox>
                            <TextBox Name="ShortcutBox"
                                     Grid.Row="9"
                                     VerticalAlignment="Center"
                                     PlaceholderText="Atajo (Opcional)" />
                        </Grid>
                    </ScrollViewer>
                    <Grid Grid.Row="1" Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition x:Name="gridColumnWidth" Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Width="{Binding ActualWidth,
                                                ElementName=gridColumnWidth}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="addNewItem_Click">
                            Agregar
                        </Button>
                        <Button Grid.Column="1"
                                Width="{Binding ActualWidth,
                                                ElementName=gridColumnWidth}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            Cancelar
                        </Button>
                    </Grid>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <StackPanel>
                    <Button x:Name="Retrieve"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Retrieve_Click"
                            Content="Retrieve" />

                    <Button x:Name="Add"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Add_Click"
                            Content="Add" />

                    <TextBlock x:Name="textBlock"
                               Width="52"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Text="Name"
                               TextWrapping="Wrap" />

                    <TextBox x:Name="textBox"
                             Width="370"
                             Margin="0,0,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             TextWrapping="Wrap" />

                    <TextBlock x:Name="textBlock1"
                               Width="52"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Text="Age"
                               TextWrapping="Wrap" />

                    <TextBox x:Name="textBox1"
                             Width="191"
                             Margin="0,0,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             TextWrapping="Wrap" />

                    <TextBlock x:Name="textBlock2"
                               Width="324"
                               Height="131"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               TextWrapping="Wrap" />
                </StackPanel>

            </SplitView.Content>
        </SplitView>


    </Grid>
</Page>

